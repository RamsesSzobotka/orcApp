<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?android:colorBackground">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar Filtro al Texto"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="?android:textColorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp" />

    <!-- Spinner para seleccionar el filtro -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona un filtro"
        android:textColor="?android:textColorSecondary"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spnFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginBottom="24dp" />

    <!-- Botón aplicar filtro -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAplicarFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar Filtro"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimaryInverse"
        android:backgroundTint="?attr/colorSecondary"
        app:cornerRadius="12dp"
        android:onClick="AplicarFiltro"
        android:layout_marginBottom="16dp" />

    <!-- Botón para ver el texto original -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerOriginal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Texto Original"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimaryInverse"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        android:onClick="verTextoOG"
        android:layout_marginBottom="24dp" />

    <!-- Lista para mostrar los resultados -->
    <ListView
        android:id="@+id/lvResultados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="?android:attr/listDivider"
        android:dividerHeight="1dp"
        android:visibility="invisible" />

</LinearLayout>